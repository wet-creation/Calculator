<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android
    ="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/math_operation"
        android:layout_width="match_parent"
        android:layout_height="151dp"
        android:ellipsize="start"
        android:gravity="end"
        android:textColor="@color/white"
        android:textSize="40sp"
        tools:viewBindingIgnore="false"

        />

    <TextView
        android:id="@+id/result_text"
        android:layout_width="match_parent"
        android:layout_height="86dp"
        android:ellipsize="end"
        android:gravity="end"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textSize="30sp"></TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_weight="1"
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/ac"
                style="@style/ActionButton"
                android:text="AC"
                />
            <TextView
                android:id="@+id/brecket1"
                style="@style/ActionButton"
                android:text="("
                />
            <TextView
                style="@style/ActionButton"
                android:id="@+id/brecket2"
                android:text=")"
                />
            <TextView
                style="@style/ActionButton"
                android:id="@+id/divine"
                android:text="รท"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                style="@style/NumberButton"
                android:id="@+id/n7"
                android:text="7"
                />
            <TextView
                style="@style/NumberButton"
                android:id="@+id/n8"
                android:text="8"
                />
            <TextView
                style="@style/NumberButton"
                android:id="@+id/n9"
                android:text="9"
                />
            <TextView
                style="@style/ActionButton"
                android:id="@+id/multiply"
                android:text="*"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            >
            <TextView
                style="@style/NumberButton"
                android:id="@+id/n4"
                android:text="4"
                />
            <TextView
                style="@style/NumberButton"
                android:id="@+id/n5"
                android:text="5"
                />
            <TextView
                style="@style/NumberButton"
                android:id="@+id/n6"
                android:text="6"
                />
            <TextView
                style="@style/ActionButton"
                android:id="@+id/plus"
                android:text="+"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            >
            <TextView
                style="@style/NumberButton"
                android:id="@+id/n1"
                android:text="1"
                />
            <TextView
                style="@style/NumberButton"
                android:id="@+id/n2"
                android:text="2"
                />
            <TextView
                style="@style/NumberButton"
                android:id="@+id/n3"
                android:text="3"
                />
            <TextView
                style="@style/ActionButton"
                android:id="@+id/minus"
                android:text="-"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            >
            <TextView
                style="@style/NumberButton"
                android:id="@+id/dote"
                android:text=","
                />
            <TextView
                style="@style/NumberButton"
                android:id="@+id/n0"
                android:text="0"
                />

            <TextView
                android:id="@+id/back"
                style="@style/ActionButton"
                android:text="Back" />

            <TextView
                style="@style/ActionButton"
                android:id="@+id/equal"
                android:text="="
                />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>